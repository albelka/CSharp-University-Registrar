@{
  Layout="Shared/_Layout.cshtml";
}
<h3>All Courses</h3>
<br>

@if(Model.Count != 0)
{
  foreach(var course in Model)
  {
    <h4>@course.GetName() <small><a href="/courses/@course.GetId()">Visit Page</a></small></h4>
    <p>@course.GetCourseNumber()</p>
    <br>
  }
}
else
{
  <p>There are no courses to display.</p>
}
